
@model IEnumerable<Practice1.Models.HospitalDepartment>
@{
    ViewData["Title"] = "Home Page";
}


@*<h1>Ticket List</h1>*@

<style>
    table {
        border-collapse: separate;
        border-spacing: 0 0px;
    }

    th {
        background-color: #4287f5;
        color: white;
    }

    th,
    td {
        width: 150px;
        text-align: left;
        border: 1px solid black;
        padding: 5px;
    }

    h2 {
        color: #4287f5;
    }
</style>
<body background="https://img.hexrpg.com/GM/hwmap.png">
    <div class="row pt-4"; font-style="color: white">
        <div class="col-6">
            <h2 class="text-white">Hospital Department List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Departments" asp-action="Create" class="btn btn-outline-info">
                <i class="fas fa-plus"></i> &nbsp; Create New Ticket
            </a>
        </div>
    </div>
    <br />

   

    @if (Model.Count() != 0)
    {
        <div style="background-color:antiquewhite;color:white;padding:20px; " class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.EmployeeId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Department)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DepartmentId)
                        </th>


                        <th></th>
                        <th>Edit Action</th>
                        <th>View Details</th>
                        <th>Delete</th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployeeId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Department)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DepartmentId)
                            </td>

                            <td>
                            <td class="text-center">
                                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" class="btn btn-dark" asp-route-ticketId="@item.Id"> View Details</a>
                            </td>
                            <td class="text-center">
                                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
    }
    @if (Model.Count() == 0)
    {
        <div>No data to display</div>

    }
</body>